From fb2bb1ca79f20afbe008b90f5f93ccf3374b488d Mon Sep 17 00:00:00 2001
From: Chris Lawrence <lordsutch@gmail.com>
Date: Sat, 21 May 2022 20:38:21 -0400
Subject: [PATCH] overlays: add RV8803 RTC overlay to the generic ARM RTC
 device tree

---
 arch/arm/boot/dts/overlays/i2c-rtc-common.dtsi | 14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/arch/arm/boot/dts/overlays/i2c-rtc-common.dtsi b/arch/arm/boot/dts/overlays/i2c-rtc-common.dtsi
index 7f749fc2d802..5e03764b67b0 100644
--- a/arch/arm/boot/dts/overlays/i2c-rtc-common.dtsi
+++ b/arch/arm/boot/dts/overlays/i2c-rtc-common.dtsi
@@ -270,6 +270,19 @@ bq32000: bq32000@68 {
 		};
 	};
 
+	fragment@20 {
+		target = <&i2cbus>;
+		__dormant__ {
+			#address-cells = <1>;
+			#size-cells = <0>;
+
+			rv8803: rv8803@32 {
+				compatible = "microcrystal,rv8803";
+				reg = <0x32>;
+			};
+		};
+	};
+
 
 	__overrides__ {
 		abx80x = <0>,"+0";
@@ -292,6 +305,7 @@ __overrides__ {
 		pcf85063a = <0>,"+16";
 		s35390a = <0>,"+18";
 		bq32000 = <0>,"+19";
+		rv8803 = <0>,"+20";
 
 		addr = <&abx80x>, "reg:0",
 		       <&ds1307>, "reg:0",
-- 
