@@ -487,6 +488,7 @@ CONFIG_NETCONSOLE=m
 CONFIG_TUN=m
 CONFIG_VETH=m
 CONFIG_NET_VRF=m
+CONFIG_VSOCKMON=m
 CONFIG_ENC28J60=m
 CONFIG_QCA7000_SPI=m
