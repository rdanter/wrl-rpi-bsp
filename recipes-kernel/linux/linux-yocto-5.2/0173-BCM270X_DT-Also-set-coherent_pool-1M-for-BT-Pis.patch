+		bootargs = "coherent_pool=1M 8250.nr_uarts=1";
 	};
 
 	aliases {
diff --git a/arch/arm/boot/dts/bcm2710-rpi-3-b.dts b/arch/arm/boot/dts/bcm2710-rpi-3-b.dts
index ee526c4c5d5a..ed00143b884a 100644
